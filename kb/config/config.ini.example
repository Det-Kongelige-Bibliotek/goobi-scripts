# Config for goobi steps
# Save in utf8 without BOM.
# No spaces in keys!

[general]

# debug, log_max_bytes, log_backup_count and  log_email can be overwritten in the main section of a step
debug = false

log_max_bytes = 50000000
log_backup_count = 4 
#log_email = jeel@kb.dk
#matthew.wilcoxson@bodleian.ox.ac.uk 

# TODO log_folder = /opt/digiverso/logs

mets_file_original_extension = .original.xml

[property_inserter]
debug = true

log = /opt/digiverso/logs/step_property_inserter.log
log_email_subject = Goobi Dev Property Inserter Error

[list_goobi_files]
debug = false
log = /opt/digiverso/logs/list_arguments.log

[move_invalid_files]
debug = false
log = /opt/digiverso/logs/step_move_invalid_files.log
log_email_subject = Goobi Dev Remove Junk Files
valid_file_exts = tif;tiff;jpg;jpeg;jpe;jif;jfif;jfi;jp2;j2k;jpf;jpx;jpm;mj2
invalid_folder = invalid/
; potential vals 0 || 1 || 2
; 0 - all errors will cause script to stop
; 1 - serious errors will cause script to stop
; 2 - only critical errors will cause script to stop
break_on_errors = 1

[tiff_verify]
debug = true
log = /opt/digiverso/logs/step_tiff_verify.log
log_email_subject = Goobi Dev Tiff Verify Error

[jpeg_create]
debug = true

log = /opt/digiverso/logs/step_jpeg_create.log
log_email_subject = Goobi Dev JPEG Create Error

[jpeg_verify]
debug = true

log = /opt/digiverso/logs/step_jpeg_verify.log
log_email_subject = Goobi Dev JPEG Verify Error

[jpeg2000_create]
debug = true

log = /opt/digiverso/logs/step_jpeg2000_create.log
log_email_subject = Goobi Dev Jpeg2000 Create Error

[jpeg2000_verify]
debug = true

log = /opt/digiverso/logs/step_jpeg2000_verify.log
log_email_subject = Goobi Dev Jpeg2000 Verify Error

[uuid_insert]
debug = true

log = /opt/digiverso/logs/step_uuid_inserter.log
log_email_subject = Goobi Dev UUID insert Error


[update_mets]
debug = true

log = /opt/digiverso/logs/step_update_mets.log
log_email_subject = Goobi Dev Update Mets Error

databank_url = https://databank.ora.ox.ac.uk

[derivative_metadata]
debug = true

log = /opt/digiverso/logs/step_derivative_metadata.log
log_email_subject = Goobi Dev Metadata Derivatives Error

xsl_folder = /opt/digiverso/goobi/xslt/
dc_stylesheet = goobi-to-dc-multi.xsl

[step_tester]
debug = true

log = /opt/digiverso/logs/step_tester.log
log_email_subject = Goobi Tester step

[archiver]
debug = true

log = /opt/digiverso/logs/step_archiver.log
